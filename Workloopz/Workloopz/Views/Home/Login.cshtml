@model Workloopz.ViewModels.LoginVM
@{
    ViewData["Title"] = "Đăng nhập";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>HTML Codex - Login Form Template</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="Login Form Template" name="keywords">
    <meta content="Login Form Template" name="description">

    <!-- Favicon -->
    <link href="img/favicon.ico" rel="icon">

    <!-- Stylesheet -->
    <link href="css/style.css" rel="stylesheet">
</head>
<body>
    <div class="wrapper login-1">
        <div class="container">
            <div class="col-left">
                <div class="login-text">
                    <h2>Welcome Back</h2>
                </div>
            </div>
            <div class="col-right">
                <div class="login-form">
                    <h2>Login</h2>
                    <form asp-action="Login">
                        <p>
                            <label asp-for="@Model.Username"><span asp-validation-for="@Model.Username"></span></label>
                            <input asp-for="@Model.Username" placeholder="Username or Email">
                        </p>
                        @Html.ValidationMessage("UsernameError")
                        <p>
                            <label asp-for="@Model.Password"><span asp-validation-for="@Model.Password"></span></label>
                            <input asp-for="@Model.Password" placeholder="Password">
                        </p>
                        @Html.ValidationMessage("PasswordError")
                        <p>
                            <input type="submit" value="Sign In" />
                        </p>
                        <p>
                            <a href="">Forget Password?</a>
                        </p>
                    </form>
                </div>
            </div>
        </div>

    </div>
</body>
</html>
