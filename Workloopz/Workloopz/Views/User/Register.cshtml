@{
	Layout = "_Layout"; ;
}
@model Workloopz.ViewModels.RegisterVM
@{
	ViewData["Title"] = "Đăng ký";
}
<div class="card">
	<div class="card-body">
		<div class="m-sm-3">
			<form asp-action="Register">
				<div class="row">
					<div class="col-6">
				<div class="mb-3">
					<label class="form-label" asp-for="@Model.FirstName"></label>
							<input asp-for="@Model.FirstName" class="form-control form-control-lg" placeholder="Họ" />
				</div>
						<div class="mb-3">
							<label asp-for="@Model.Username" class="form-label"></label>
							<input asp-for="@Model.Username" class="form-control form-control-lg" placeholder="Nhập Tên đăng nhập" />
						</div>
						<div class="mb-3">
							<label asp-for="@Model.Email"  class="form-label"></label>
							<input asp-for="@Model.Email" class="form-control form-control-lg" placeholder="Nhập Email" />
						</div>
						<div class="mb-3">
							<label asp-for="@Model.Tittle" class="form-label"></label>
							<input asp-for="@Model.Tittle" class="form-control form-control-lg" placeholder="Nhập chức vụ" />
						</div>
					</div>
					<div class="col-6">
						<div class="mb-3">
							<label class="form-label" asp-for="@Model.LastName"></label>
							<input asp-for="@Model.LastName" class="form-control form-control-lg"  placeholder="Tên" />
						</div>
						<div class="mb-3">
							<label asp-for="@Model.Password" class="form-label"></label>
							<input asp-for="@Model.Password" class="form-control form-control-lg" placeholder="Nhập mật khẩu" />
						</div>
						<div class="mb-3">
							<label asp-for="@Model.JobTitle" class="form-label"></label>
							<input asp-for="@Model.JobTitle" class="form-control form-control-lg" placeholder="Nhập chức vụ" />
						</div>
					</div>
				</div>
				<div class="d-grid gap-2 mt-3">
					<button type="submit"  class="btn btn-lg btn-primary">Sign up</button>
				</div>
			</form>
		</div>
	</div>
</div>